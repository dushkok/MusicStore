@model MusicStore.ViewModel.ModelsViewModel

@{
    ViewBag.Title = "Home Page";
}

<div class="col-lg-10 col-lg-offset-1">
    <div id="myCarousel" class="carousel slide" data-ride="carousel" >
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
            <li data-target="#myCarousel" data-slide-to="3"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active">
                <img src="https://lh3.googleusercontent.com/8zyhPT9kkGLXUqWRjDTyl1S6sHiDxEouFkUy2905ZjIqADfml8ozQn5crqYtm7Xm7a4vQHlpuS0" alt="Los Angeles" style="width:100%; max-height: 400px;">
            </div>

            <div class="item">
                <img src="https://lh3.googleusercontent.com/TuqcIx6sl2WzRymhw_ufwrD89kjvtJUnOsnJpvGHji_3lFlFD40HQGPcLKYbfkgXik5_7nf5" alt="Chicago" style="width:100%; max-height: 400px;">
            </div>
    
            <div class="item">
                <img src="https://lh3.googleusercontent.com/I1JLaBOhF93lzu4REZ47MGB__jzxp2XirHvakqKcUTv1VYmV1TuFIjREzJWoVwsQHMrchFsd0g" alt="New york" style="width:100%; max-height: 400px;">
            </div>
            <div class="item">
                <img src="https://lh3.googleusercontent.com/L9DydzKcvYjodjCVJUrA_P61ZWpuHgMLM2QVJ4wNOwhX3h0k1SG7HJkj8uItlNGBb6-zoPmGoss" alt="New york" style="width:100%; max-height: 400px;">
            </div>
        </div>
    
    

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
<h3>Featured Artists</h3>
<hr/>
<div class="row">
    
    @foreach (var artist in Model.Artists.Take(6))
    {

        <a href="@Url.Action("Details", "Artists", new {id = artist.ArtistId})">
            <div class="col-lg-2">
                <div class="thumbnail">
                    <img src="@artist.Picture">
                    <div class="caption">
                        <p class="text-primary">@artist.Name</p>
                    </div>
                </div>
            </div>
        </a>
    }
</div>
<hr />
<h3>Featured Albums</h3>
<hr />
<div class="row">
    @foreach (var album in Model.Albums.Take(6))
    {

        <a href="@Url.Action("Details", "Albums", new {id = album.AlbumId})">
            <div class="col-lg-2">
                <div class="thumbnail">
                    <img src="@album.Poster">
                    <div class="caption">
                        <p class="text-primary">@album.Title</p>
                        <p class="text-primary">@album.Artist.Name</p>
                        <p class="text-primary">@album.Price$</p>
                    </div>
                </div>
            </div>
        </a>
    }
</div>
<hr/>
<h3>Featured Songs</h3>
<hr/>
<div class="row">
    @foreach (var song in Model.Songs.Take(6))
    {

        <a href="@Url.Action("Details", "Songs", new {id = song.SongId})">
            <div class="col-lg-2">
                <div class="thumbnail">
                    <img src="@song.Album.Poster">
                    <div class="caption">
                        <p class="text-primary">@song.Album.Title</p>
                        <p class="text-primary">@song.Title</p>
                    </div>
                </div>
            </div>
        </a>
    }
</div>
